{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        // "module": "es5", // Specifies module system
        "lib": ["es6"],
        "moduleResolution": "node",
        "outDir": "./dist",
        "target": "esnext",
        "esModuleInterop": true,
        "downlevelIteration": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
